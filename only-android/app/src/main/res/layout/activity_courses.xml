<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.autokat.CoursesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorUser"
        android:theme="@style/ToolbarTheme"
        tools:viewBindingIgnore="true" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_type_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:checked="true"
        android:text="@string/activity_courses_korzystanie_z_najnowszych_kursow"
        android:textOff="@string/activity_courses_switch_no"
        android:textOn="@string/activity_courses_switch_yes"
        android:thumb="@drawable/thumb"
        app:track="@drawable/track" />

    <Button
        android:id="@+id/button_select_date_courses"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif"
        android:text="@string/activity_courses_button_wybierz_date_kursow"
        android:textAllCaps="false"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif"
        android:text="@string/activity_courses_kurs_metali"
        android:textColor="@color/colorUser" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_courses_metal"
                android:textColor="@color/colorUser" />

            <TextView
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_courses_wartosc"
                android:textColor="@color/colorUser" />

            <TextView
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_courses_z_dnia"
                android:textColor="@color/colorUser" />
        </TableRow>

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_courses_platyna"
                android:textColor="@color/colorUser" />

            <TextView
                android:id="@+id/platinum"
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/platinum_date"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorUser" />
        </TableRow>

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_courses_pallad"
                android:textColor="@color/colorUser" />

            <TextView
                android:id="@+id/palladium"
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/palladium_date"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorUser" />
        </TableRow>

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_courses_rod"
                android:textColor="@color/colorUser" />

            <TextView
                android:id="@+id/rhodium"
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/rhodium_date"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorUser" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:text="@string/activity_courses_kurs_walut"
        android:textColor="@color/colorUser" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_courses_waluta"
                android:textColor="@color/colorUser" />

            <TextView
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_courses_wartosc"
                android:textColor="@color/colorUser" />

            <TextView
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_courses_z_dnia"
                android:textColor="@color/colorUser" />
        </TableRow>

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_courses_euro"
                android:textColor="@color/colorUser" />

            <TextView
                android:id="@+id/eur_pln"
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/eur_pln_date"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorUser" />
        </TableRow>

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_courses_dolar"
                android:textColor="@color/colorUser" />

            <TextView
                android:id="@+id/usd_pln"
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/usd_pln_date"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorUser" />
        </TableRow>
    </TableLayout>
</LinearLayout>
