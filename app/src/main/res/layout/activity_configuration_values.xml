<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.autokat.ConfigurationValuesActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif"
        android:text="@string/activity_configuration_values_dane_o_kursach_metali"
        android:textColor="@color/colorDarkSlateGray" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_configuration_values_metali"
                android:textColor="@color/colorDarkSlateGray" />

            <TextView
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_configuration_values_wartosc"
                android:textColor="@color/colorDarkSlateGray" />

            <TextView
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_configuration_values_z_dnia"
                android:textColor="@color/colorDarkSlateGray" />
        </TableRow>

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_configuration_values_platyna"
                android:textColor="@color/colorDarkSlateGray" />

            <TextView
                android:id="@+id/activity_configuration_values_element_platinum"
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/activity_configuration_values_element_platinum_date"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorDarkSlateGray" />
        </TableRow>

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_configuration_values_pallad"
                android:textColor="@color/colorDarkSlateGray" />

            <TextView
                android:id="@+id/activity_configuration_values_element_palladium"
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/activity_configuration_values_element_palladium_date"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorDarkSlateGray" />
        </TableRow>

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_configuration_values_rod"
                android:textColor="@color/colorDarkSlateGray" />

            <TextView
                android:id="@+id/activity_configuration_values_element_rhodium"
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/activity_configuration_values_element_rhodium_date"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorDarkSlateGray" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:text="@string/activity_configuration_values_dane_o_kursach_walut"
        android:textColor="@color/colorDarkSlateGray" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_configuration_values_waluta"
                android:textColor="@color/colorDarkSlateGray" />

            <TextView
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_configuration_values_wartosc"
                android:textColor="@color/colorDarkSlateGray" />

            <TextView
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_configuration_values_z_dnia"
                android:textColor="@color/colorDarkSlateGray" />
        </TableRow>

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_configuration_values_euro"
                android:textColor="@color/colorDarkSlateGray" />

            <TextView
                android:id="@+id/activity_configuration_values_element_eur_pln"
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/activity_configuration_values_element_eur_pln_date"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorDarkSlateGray" />
        </TableRow>

        <TableRow
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0">

            <TextView
                android:layout_width="96dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/activity_configuration_values_dolar"
                android:textColor="@color/colorDarkSlateGray" />

            <TextView
                android:id="@+id/activity_configuration_values_element_usd_pln"
                android:layout_weight="4"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/activity_configuration_values_element_usd_pln_date"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/colorDarkSlateGray" />
        </TableRow>
    </TableLayout>
</LinearLayout>
