<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.autokat.CalendarViewActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorUser">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ToolbarTheme"
            tools:viewBindingIgnore="true" />

        <include
            android:id="@+id/legendLayout"
            layout="@layout/calendar_day_legend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.kizitonwose.calendarview.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cv_dayViewResource="@layout/calendar_day"
            app:cv_monthHeaderResource="@layout/calendar_header"
            app:cv_orientation="vertical" />

        <LinearLayout
            android:id="@+id/calendar_view_courses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/calendar_view_actual_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGray"
                android:fontFamily="sans-serif"
                android:paddingStart="20dp"
                android:paddingTop="12dp"
                android:paddingEnd="20dp"
                android:paddingBottom="12dp"
                android:textColor="@color/colorUser" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0">

                    <TextView
                        android:layout_width="96dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/activity_configuration_values_platyna"
                        android:textColor="@color/colorUser" />

                    <TextView
                        android:id="@+id/calendar_view_actual_platinum"
                        android:layout_weight="4"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:textColor="@android:color/holo_green_dark" />

                    <TextView
                        android:layout_width="96dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/activity_configuration_values_euro"
                        android:textColor="@color/colorUser" />

                    <TextView
                        android:id="@+id/calendar_view_actual_eur_pln"
                        android:layout_weight="4"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:textColor="@android:color/holo_green_dark" />
                </TableRow>

                <TableRow
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0">

                    <TextView
                        android:layout_width="96dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/activity_configuration_values_pallad"
                        android:textColor="@color/colorUser" />

                    <TextView
                        android:id="@+id/calendar_view_actual_palladium"
                        android:layout_weight="4"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:textColor="@android:color/holo_green_dark" />

                    <TextView
                        android:layout_width="96dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/activity_configuration_values_dolar"
                        android:textColor="@color/colorUser" />

                    <TextView
                        android:id="@+id/calendar_view_actual_usd_pln"
                        android:layout_weight="4"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:textColor="@android:color/holo_green_dark" />
                </TableRow>

                <TableRow
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0">

                    <TextView
                        android:layout_width="96dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/activity_configuration_values_rod"
                        android:textColor="@color/colorUser" />

                    <TextView
                        android:id="@+id/calendar_view_actual_rhodium"
                        android:layout_weight="4"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:textColor="@android:color/holo_green_dark" />

                    <TextView android:layout_width="96dp" />

                    <TextView android:layout_weight="4" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>