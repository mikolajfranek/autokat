<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.autokat.ResultActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            tools:ignore="UselessParent">

            <EditText
                android:id="@+id/activity_result_edittext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/drawable_rectangle"
                android:enabled="true"
                android:fontFamily="sans-serif"
                android:hint="@string/activity_result_hint_text"
                android:inputType="text"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/colorUser"
                android:importantForAutofill="no"
                android:layout_weight="1"
                />

            <Button
                style="@style/Widget.AppCompat.Button"
                android:id="@+id/activity_result_editbutton"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="50dp"
                android:background="@drawable/drawable_rectangle"
                android:enabled="true"
                android:padding="8dp"
                android:text=""
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:drawableRight="@android:drawable/ic_menu_save"
                android:drawableEnd="@android:drawable/ic_menu_save"
                android:layout_gravity="right"
                android:textAllCaps="false"
                tools:ignore="RtlHardcoded"
                android:onClick="addRecordHistoryOfSearch"
                />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/activity_result_listView"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_result_textview_waiting"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/activity_result_waiting"
        android:textColor="@color/colorUser" />

    <TextView
        android:id="@+id/activity_result_textview_empty_list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/activity_result_empty_list"
        android:textColor="@color/colorUser" />

    <TextView
        android:id="@+id/activity_result_textview_empty_database"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/activity_result_empty_database"
        android:textColor="@color/colorUser" />

</LinearLayout>